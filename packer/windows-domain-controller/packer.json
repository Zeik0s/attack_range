{
  "variables": {
      "splunk_indexer_ip": "",
      "win_username": "",
      "win_password": "",
      "splunk_uf_win_url": "",
      "win_sysmon_url": "",
      "win_sysmon_template": "",
      "splunk_admin_password": "",
      "windows_domain_controller_os": "",
      "key_name": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "force_deregister": "true",
    "force_delete_snapshot": "true",
    "source_ami_filter": {
                "filters": {
                    "name": "{{user `windows_domain_controller_os`}}",
                    "root-device-type": "ebs",
                    "virtualization-type": "hvm"
                },
                "most_recent": true,
                "owners": [
                    "801119661308"
                ]
            },
    "instance_type": "t2.2xlarge",
    "communicator": "winrm",
    "winrm_username": "{{user `win_username`}}",
    "winrm_password": "{{user `win_password`}}",
    "user_data_file": "packer/script/userdata.ps1",
    "winrm_timeout": "10m",
    "winrm_use_ssl": "true",
    "winrm_insecure": "true",
    "ami_name": "packer-windows-domain-controller-{{user `key_name`}}"
  }],
  "provisioners":  [
    {
      "type": "shell-local",
			"command": "echo hello >> test.txt"
    }
  ]

}
