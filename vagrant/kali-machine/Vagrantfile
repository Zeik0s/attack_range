config.vm.define "attack-range-kali-machine" do |config|
  VM_NAME_KALI= "attack-range-kali-machine"
  config.vm.box = "kalilinux/rolling"
  config.vm.box_version = "2019.3.0"
  config.vm.boot_timeout = 600
  config.vm.hostname = "#{VM_NAME_KALI}"
  config.vm.network :private_network, ip: "10.0.1.7"

  config.vm.provider "virtualbox" do |vb, override|
    vb.gui = true
    vb.name = "#{VM_NAME_KALI}"
    vb.customize ["modifyvm", :id, "--memory", 2048]
    vb.customize ["modifyvm", :id, "--cpus", 2]
  end
end
